<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightYellow"
    tools:context=".RecyclerShopActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/colorLightYellow">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@drawable/button"
        android:text="back"
        android:textColor="@color/colorTextLightYellow"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cookies_amount"
        android:text="n cookies"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/back"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBrownText"
        android:textSize="24sp"
        android:typeface="serif"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cookies_farmspeed"
        android:text="n cookies/sec"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorBrownText"
        android:textSize="24sp"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/log"
        android:layout_width="149dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@+id/back"
        android:layout_toLeftOf="@+id/back" />


</RelativeLayout>